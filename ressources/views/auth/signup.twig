{% extends 'templates/app.twig'%}

{% block content %}
    
  <div class="row">

    <form class="col s12" action="{{ path_for('auth.signup') }}" method="POST" >

     <div class="row">
    <form class="col s12">

   
        <div class="row">
        <div class="input-field col s12">
         <i class="material-icons prefix">account_circle</i>
          <input name="nom" id="nom" type="text" maxlength="100" class="{{ errors.nom ? ' invalid' : '' }}" value="{{ old.nom }}">
          <label  data-error="{{ errors.nom ? errors.nom | first : '' }}" for="nom">First name</label>
        </div>
        </div>

        <div class="row">
        <div class="input-field col s12">
         <i class="material-icons prefix">account_circle</i>
          <input name="prenom" id="prenom" type="text" maxlength="100" class="{{ errors.prenom ? ' invalid' : '' }}" value="{{ old.prenom }}">
          <label  data-error="{{ errors.prenom ? errors.prenom | first : '' }}" for="prenom">Last name</label>
        </div>
        </div>
   
    

     <div class="row">
        <div class="input-field col s12">
           <i class="material-icons prefix">email</i>
          <input name="email" id="email" type="email" class="{{ errors.email ? ' invalid' : '' }}" value="{{ old.email }}">
          <label data-error="{{ errors.email ? errors.email | first : '' }}"  for="email">Email</label>
        </div>
      </div>

     <div class="row">
        <div class="input-field col s12">
           <i class="material-icons prefix">verified_user</i>
          <input name="pseudo" id="pseudo" type="text" maxlength="100" class="{{ errors.pseudo ? ' invalid' : '' }}" value="{{ old.pseudo }}">
          <label  data-error="{{ errors.pseudo ? errors.pseudo | first : '' }}" for="pseudo">Username</label>
        </div>
      </div>

    <div class="row">
        <div class="input-field col s12">
        <i class="material-icons prefix">lock_outline</i>
          <input  name="password" id="password" type="password" class="{{ errors.password ? ' invalid' : '' }}" maxlength="100" >
          <label  data-error="{{ errors.password ? errors.password | first : '' }}"   for="password">Password</label>
        </div>
      </div>


     <div class="row">
     <div class="input-field col s12">
       <div class="col s10 offset-s1 center-align">
      <button class="btn waves-effect waves-light" type="submit" name="action">Sign Up
        <i class="material-icons right">send</i>
      </button>
        </div>

        </div>
      </div>


       {{  csrf.field | raw }}

      </form>


    </div>
{% endblock %}